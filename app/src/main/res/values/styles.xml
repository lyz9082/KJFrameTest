<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="titlebar">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="titlebar_text" parent="titlebar">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titlebar_img" parent="titlebar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="bottombar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="list_text_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="list_text_info">
        <item name="android:textColor">#9a9a9a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="textview_more">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff7b7b7b</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:drawablePadding">12.0dip</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mine_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mine_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>
    
     <style name="note_detail_menu">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    
     <style name="text_style_uid">
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">14sp</item>
    </style>
    
      <style name="note_detail_menu_item" parent="note_detail_menu">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
      
    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

</resources>