<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ddffffff" >

    <RelativeLayout
        android:id="@+id/item_blog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/item_blog_tip_recommend"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:contentDescription="@null"
            android:src="@drawable/blog_item_recommend_icon" />

        <ImageView
            android:id="@+id/item_blog_tip_tody"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/item_blog_tip_recommend"
            android:contentDescription="@null"
            android:padding="2dp"
            android:src="@drawable/blog_item_today_icon" />

        <TextView
            android:id="@+id/item_blog_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_blog_tip_tody"
            android:layout_alignTop="@+id/item_blog_tip_tody"
            android:layout_toRightOf="@+id/item_blog_tip_tody"
            android:gravity="top"
            android:singleLine="true"
            android:text="@string/today_message"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_blog_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_blog_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/everyday_message_description"
        android:textColor="#9a9a9a" />

    <TextView
        android:id="@+id/item_blog_tv_date"
        style="@style/list_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_blog_tv_description"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="2dp" />

    <ImageView
        android:id="@+id/item_blog_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_axis_top_line" />

</RelativeLayout>